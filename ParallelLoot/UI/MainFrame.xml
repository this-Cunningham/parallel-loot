<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    
    <Script file="MainFrame.lua"/>
    <Script file="CategoryButtons.lua"/>
    <Script file="ItemPanel.lua"/>
    <Script file="RollDisplay.lua"/>
    
    <!-- Main Loot Session Frame -->
    <Frame name="ParallelLootMainFrame" parent="UIParent" movable="true" resizable="true" enableMouse="true" hidden="true" frameStrata="MEDIUM" inherits="BackdropTemplate">
        <Size x="700" y="500"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        
        <!-- Background will be set in Lua with BackdropTemplate -->
        
        <Layers>
            <!-- Title Text -->
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Parallel Loot">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP">
                            <Offset x="0" y="-15"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        
        <Frames>
            <!-- Close Button -->
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
                        <Offset x="-5" y="-5"/>
                    </Anchor>
                </Anchors>
            </Button>
            
            <!-- Tab Container Frame -->
            <Frame name="$parentTabContainer">
                <Size x="680" y="30"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset x="15" y="-45"/>
                    </Anchor>
                </Anchors>
            </Frame>
            
            <!-- Content Frame (Scrollable) -->
            <ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size x="660" y="390"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset x="15" y="-80"/>
                    </Anchor>
                </Anchors>
                <ScrollChild>
                    <Frame name="$parentScrollChild">
                        <Size x="640" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
            
            <!-- Resize Button -->
            <Button name="$parentResizeButton">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
                        <Offset x="-5" y="5"/>
                    </Anchor>
                </Anchors>
                <NormalTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Up"/>
                <HighlightTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Highlight"/>
                <PushedTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Down"/>
            </Button>
        </Frames>
        
        <Scripts>
            <OnLoad>
                ParallelLoot.UIManager:OnMainFrameLoad(self)
            </OnLoad>
            <OnShow>
                ParallelLoot.UIManager:OnMainFrameShow(self)
            </OnShow>
            <OnHide>
                ParallelLoot.UIManager:OnMainFrameHide(self)
            </OnHide>
        </Scripts>
    </Frame>
    
</Ui>
